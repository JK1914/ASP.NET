@model User

@{    
    ViewData["Title"] = @Model.Name + " и его книги";
}

<div>

    <div class="card" style="border-radius: 10px; box-shadow: 0 0 30px rgb(20, 20, 20)">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">Имеющиеся книги: </h6>
            <div class="d-flex" style="justify-content: center">
                @foreach (var book in @Model.BooksToRefund)
                {                    

                    <div class="card" style="width: 25rem; margin: 5px; border-radius: 10px; box-shadow: 0 0 10px rgb(20, 20, 20);">
                        <img src="@book.ImageUrl" class="card-img-top" alt="@book.Name" style="padding: 5px; border-radius: 10px">
                        <div class="card-body">
                            <h5 class="card-title"><b>@book.Name</b></h5>
                            <h5 class="card-title">@book.AuthorName</h5>
                            <br>
                            <p class="card-text">@book.Description</p>
                            <div class="d-flex">
                                <form asp-action="ReturnBook" asp-controller="User" method="post">
                                                                                                                
                                <input type="text" hidden="hidden" readonly class="form-control-plaintext" id="userName" name="userName" value="@book.BookedBy.Name">
                                <input type="text" hidden="hidden" readonly class="form-control-plaintext" id="bookId" name="bookId" value="@book.Id">
                                <button type="submit" class="btn btn-outline-primary">Вернуть</button>
                                
                                </form>                     
                            </div>
                        </div>             
                    </div>       
                }
            </div>
        </div>        
    </div>    
</div>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-controller="Library" asp-action="Index" asp-route-id=1>В библиотеку</a>
</div>


