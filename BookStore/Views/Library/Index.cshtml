@model Library

@{
    ViewData["Title"] = "Library";
    var uniqueBooks = Model.AvailableBooks
        .Where(t => t.IsBooked == false)
        .GroupBy(t => t.Name);
}

<title>Библиотека</title>

<div class="card" style="border-radius: 10px; box-shadow: 0 0 30px rgb(20, 20, 20)">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">Доступные книги: </h6>
        <div class="d-flex" style="justify-content: center">
        @foreach (var groupBooks in uniqueBooks)
        {
            var book = groupBooks.First(f => f.Name == groupBooks.Key);

             <div class="card" style="width: 25rem; margin: 5px; border-radius: 10px; box-shadow: 0 0 10px rgb(20, 20, 20);">
                    <img src="@book.ImageUrl" class="card-img-top" alt="@book.Name" style="padding: 5px; border-radius: 10px">
                    <div class="card-body">
                        <h5 class="card-title"><b>@book.Name</b></h5>
                        <h5 class="card-title">@book.AuthorName</h5>
                        <br>                        
                        <p class="card-text">@book.Description</p>
                        <p class="card-text">Количество: @groupBooks.Count()</p>
                        <a class="btn btn-outline-primary" asp-action="ReservedBook" asp-controller="Library" asp-route-id="@book.Id">Зарезервировать</a>
                    </div>
             </div>
        }
        </div>
    </div>
</div>

<form asp-action="ListBooks" asp-controller="User" method="post" class="mt-3">

    <input type="text" hidden="hidden" readonly class="form-control-plaintext" id="userName" name="userName" value="Вася">    
    <button type="submit" class="btn btn-outline-primary">К списку книг</button>

</form> 